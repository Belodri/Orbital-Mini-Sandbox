{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "checkJs": true,
        "moduleResolution": "bundler",
        "strict": true,
        
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "lib": ["esnext", "dom"],

        "noEmit": true,

        "baseUrl": ".", // Required to enable the 'paths' mapping.
        "paths": {
            "@bridge": ["src/Bridge/scripts/Bridge.ts"],
            "@dotnet.d.ts": ["types/external/dotnet.d.ts"],
            "@LayoutRecords.d.ts": ["types/generated/LayoutRecords.d.ts"],
            "@webapp/*": ["src/WebApp/*"]
        },
    },
    "include": ["src/**/*.ts", "Tests/**/*.ts"],
    "exclude": ["node_modules", "wwwroot"]
}